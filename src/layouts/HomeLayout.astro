---
import ThemeToggle from "@/components/ThemeToggle.astro";
import BaseLayout from "./BaseLayout.astro";
import { cn } from "@/lib/utils";
import { buttonVariants } from "@/styles/button-variants";

const pathname = new URL(Astro.request.url).pathname;
---

<BaseLayout>
  <slot name="head" slot="head">
    <title>rohid.dev</title>
    <meta
      name="description"
      content="Hi, Iâ€™m Rohid, a Full-Stack Freelance Developer from Bangladesh. I build interactive web and mobile apps with a focus on great UI/UX. I love exploring new tech, contributing to open source, and creating tools for developers."
    />
  </slot>

  <header>
    <nav
      class="container mx-auto flex h-20 max-w-screen-md items-center px-4 md:px-8"
    >
      <a href="/" class="font-semibold">rohid.dev</a>

      <div class="ml-8 flex items-center gap-4">
        <a
          href="/blog"
          class={cn(
            "font-medium text-muted-foreground transition-colors duration-200 hover:text-foreground",
            {
              "text-foreground": pathname.startsWith("/blog"),
            }
          )}>Blog</a
        >
        <a
          href="/projects"
          class={cn(
            "font-medium text-muted-foreground transition-colors duration-200 hover:text-foreground",
            {
              "text-foreground": pathname.startsWith("/projects"),
            }
          )}>Projects</a
        >
      </div>

      <div class="flex flex-1 items-center justify-end gap-2">
        <a
          href="https://x.com/rohiddev"
          class={buttonVariants({
            variant: "outline",
            size: "icon",
          })}
          target="_blank"
          rel="nofollow"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-5 w-5"
            ><path
              d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
            ></path></svg
          >
          <span class="sr-only">X/Twitter</span>
        </a>
        <a
          href="https://github.com/iam-rohid"
          class={buttonVariants({
            variant: "outline",
            size: "icon",
          })}
          target="_blank"
          rel="nofollow"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-5 w-5"
            ><path
              d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
            ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
          >
          <span class="sr-only">Github</span>
        </a>
        <ThemeToggle />
      </div>
    </nav>
  </header>

  <div class="flex-1">
    <slot />
  </div>

  <footer class="py-8">
    <div class="container mx-auto max-w-screen-md space-y-4 px-4 md:px-8">
      <p class="leading-6 text-muted-foreground">
        If you're looking to connect with me for a project, feel free to reach
        out to me.
      </p>
      <div class="flex flex-wrap gap-4">
        <a
          class="font-medium text-muted-foreground hover:text-foreground"
          href="mailto:rohidul209@gmail.com"
          target="_blank"
          rel="nofollow"
        >
          Email
        </a>
        <a
          class="font-medium text-muted-foreground hover:text-foreground"
          href="https://x.com/rohiddev"
          target="_blank"
          rel="nofollow"
        >
          X/Twitter
        </a>
        <a
          class="font-medium text-muted-foreground hover:text-foreground"
          href="https://github.com/iam-rohid"
          target="_blank"
          rel="nofollow"
        >
          Github
        </a>
      </div>
    </div>
  </footer>
</BaseLayout>
